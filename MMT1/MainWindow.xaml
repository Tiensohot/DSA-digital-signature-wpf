<Window x:Class="DsaWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DSA Demo" Height="500" Width="900">

    <DockPanel>
        <!-- Status bar dưới -->
        <StatusBar DockPanel.Dock="Bottom">
            <TextBlock Text="{Binding StatusMessage}" />
        </StatusBar>

        <!-- Tabs chính -->
        <TabControl>
            <!-- TAB 1: KHÓA -->
            <TabItem Header="Khóa DSA">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="3*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- Chọn key size + Generate -->
                    <StackPanel Orientation="Horizontal" Grid.ColumnSpan="2" Grid.Row="0" Margin="0,0,0,10">
                        <TextBlock Text="Độ dài khóa (bit):" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ComboBox ItemsSource="{Binding KeySizes}"
                                  SelectedItem="{Binding SelectedKeySize}"
                                  Width="120" Margin="0,0,10,0"/>
                        <Button Content="Generate Key"
                                Command="{Binding GenerateKeyCommand}"
                                Width="120"/>
                    </StackPanel>

                    <!-- Public key -->
                    <GroupBox Header="Public Key (Base64)" Grid.Column="0" Grid.Row="1" Margin="0,0,10,0">
                        <TextBox Text="{Binding PublicKeyText}"
                                 TextWrapping="Wrap"
                                 IsReadOnly="True"
                                 VerticalScrollBarVisibility="Auto"
                                 AcceptsReturn="True"/>
                    </GroupBox>

                    <!-- Private key -->
                    <GroupBox Header="Private Key (Base64)" Grid.Column="1" Grid.Row="1">
                        <TextBox Text="{Binding PrivateKeyText}"
                                 TextWrapping="Wrap"
                                 IsReadOnly="True"
                                 VerticalScrollBarVisibility="Auto"
                                 AcceptsReturn="True"/>
                    </GroupBox>
                </Grid>
            </TabItem>

            <!-- TAB 2: KÝ VĂN BẢN -->
            <TabItem Header="Ký văn bản">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Nội dung cần ký:" Margin="0,0,0,5"/>
                    <TextBox Grid.Row="1"
                             Text="{Binding SignInputText, UpdateSourceTrigger=PropertyChanged}"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             Height="120"/>

                    <Button Grid.Row="2"
                            Content="Ký"
                            Command="{Binding SignCommand}"
                            HorizontalAlignment="Left"
                            Width="100"
                            Margin="0,10,0,10"/>

                    <GroupBox Grid.Row="3" Header="Chữ ký (Base64)">
                        <TextBox Text="{Binding SignatureBase64}"
                                 IsReadOnly="True"
                                 TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto"
                                 AcceptsReturn="True"/>
                    </GroupBox>
                </Grid>
            </TabItem>

            <!-- TAB 3: VERIFY -->
            <TabItem Header="Xác thực chữ ký">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- Text -->
                    <TextBlock Grid.Row="0" Text="Nội dung cần kiểm tra:" Margin="0,0,0,5"/>
                    <TextBox Grid.Row="1"
                             Text="{Binding VerifyInputText, UpdateSourceTrigger=PropertyChanged}"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             Height="100"/>

                    <!-- Signature -->
                    <TextBlock Grid.Row="2" Text="Chữ ký (Base64):" Margin="0,10,0,5"/>
                    <TextBox Grid.Row="3"
                             Text="{Binding VerifySignatureBase64, UpdateSourceTrigger=PropertyChanged}"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             Height="60"/>

                    <!-- Kết quả -->
                    <StackPanel Grid.Row="4" Margin="0,10,0,0">
                        <Button Content="Verify"
                                Command="{Binding VerifyCommand}"
                                Width="100"
                                HorizontalAlignment="Left"
                                Margin="0,0,0,10"/>

                        <TextBlock Text="{Binding VerifyResultMessage}"
                                   FontWeight="Bold">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="Black"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsSignatureValid}" Value="True">
                                            <Setter Property="Foreground" Value="Green"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsSignatureValid}" Value="False">
                                            <Setter Property="Foreground" Value="Red"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
